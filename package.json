{
  "name": "mudanzas-andy",
  "type": "module",
  "version": "0.0.1",
  "author": "Jorge Orcajo <jordi.nodej@gmail.com>",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test:emailjs": "playwright test src/tests/emailjs-test.spec.js --reporter=line",
    "check": "astro check",
    "perf:optimize-images": "node scripts/optimize-core-web-vitals-images.js",
    "perf:monitor": "node scripts/monitor-core-web-vitals.js",
    "perf:audit": "pnpm build && pnpm lighthouse:mobile",
    "perf:lighthouse-mobile": "pnpm dlx lighthouse http://localhost:4321 --form-factor=mobile --only-categories=performance --output=html --output-path=./reports/lighthouse-mobile.html",
    "perf:lighthouse-desktop": "pnpm dlx lighthouse http://localhost:4321 --form-factor=desktop --only-categories=performance --output=html --output-path=./reports/lighthouse-desktop.html",
    "lighthouse:test": "pnpm dlx lighthouse http://localhost:4321 --only-categories=performance,accessibility,best-practices,seo --output=json --output-path=./reports/lighthouse-latest.json",
    "lighthouse:mobile": "pnpm dlx lighthouse http://localhost:4321 --preset=mobile --only-categories=performance,accessibility,best-practices,seo --output=html --output-path=./reports/lighthouse-mobile.html",
    "optimize:images": "node ./scripts/ultra-optimize-images.js",
    "optimize:all": "pnpm optimize:images && pnpm build",
    "perf:dev": "pnpm dev & sleep 5 && pnpm lighthouse:test",
    "check:og-image": "node scripts/check-og-image.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.5",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@emailjs/browser": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.12",
    "astro": "^5.13.2",
    "marked": "^16.3.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "jsdom": "^27.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.3"
  }
}