{
    "ci": {
        "collect": {
            "numberOfRuns": 3,
            "settings": {
                "preset": "perf",
                "onlyCategories": [
                    "performance"
                ],
                "formFactor": "mobile",
                "throttling": {
                    "rttMs": 150,
                    "throughputKbps": 1638.4,
                    "cpuSlowdownMultiplier": 4
                }
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "warn",
                    {
                        "minScore": 0.85
                    }
                ],
                "audits:first-contentful-paint": [
                    "error",
                    {
                        "maxNumericValue": 2000
                    }
                ],
                "audits:largest-contentful-paint": [
                    "error",
                    {
                        "maxNumericValue": 2500
                    }
                ],
                "audits:interactive": [
                    "error",
                    {
                        "maxNumericValue": 3800
                    }
                ],
                "audits:cumulative-layout-shift": [
                    "error",
                    {
                        "maxNumericValue": 0.1
                    }
                ],
                "audits:speed-index": [
                    "error",
                    {
                        "maxNumericValue": 3400
                    }
                ],
                "audits:total-blocking-time": [
                    "warn",
                    {
                        "maxNumericValue": 200
                    }
                ]
            }
        },
        "upload": {
            "target": "filesystem",
            "outputDir": "./reports/lighthouse-ci"
        },
        "server": {
            "port": 4321,
            "command": "pnpm run preview"
        }
    }
}