<!-- Script para el menú móvil -->
<script>
  // Truck animation: makes the truck drive in from the left on first load
  (function animateTruck() {
    const truck = document.getElementById("truck-logo");
    if (!truck) return;

    // Only trigger once per page load
    try {
      requestAnimationFrame(() => {
        // small delay so the header layout settles
        setTimeout(() => {
          truck.dataset.animated = "true";
          truck.classList.add("truck-drive");
        }, 120);
      });
    } catch (e) {
      // ignore
    }
  })();

  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLinks = document.querySelectorAll(".mobile-menu-link");

    // Toggle del menú móvil
    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");

        // Cambiar icono del botón
        const svg = menuButton.querySelector("svg");
        const currentPath = svg?.querySelector("path");

        if (mobileMenu.classList.contains("hidden")) {
          // Mostrar icono de hamburguesa
          if (currentPath) {
            currentPath.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
          }
        } else {
          // Mostrar icono de X
          if (currentPath) {
            currentPath.setAttribute("d", "M6 18L18 6M6 6l12 12");
          }
        }
      });
    }

    // Cerrar menú al hacer click en un enlace
    menuLinks.forEach((link) => {
      link.addEventListener("click", function () {
        if (mobileMenu) {
          mobileMenu.classList.add("hidden");
          // Restaurar icono de hamburguesa
          const svg = menuButton?.querySelector("svg");
          const currentPath = svg?.querySelector("path");
          if (currentPath) {
            currentPath.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
          }
        }
      });
    });

    // Smooth scroll para todos los enlaces de navegación
    const allNavLinks = document.querySelectorAll('a[href^="#"]');
    allNavLinks.forEach((link) => {
      link.addEventListener("click", function (e: Event) {
        e.preventDefault();
        const anchor = e.currentTarget as HTMLAnchorElement;
        const targetId = anchor.getAttribute("href");
        const targetElement = targetId
          ? document.querySelector(targetId)
          : null;

        if (targetElement) {
          const headerElement = document.querySelector("header") as HTMLElement;
          const headerHeight = headerElement?.offsetHeight || 80;
          const targetPosition =
            (targetElement as HTMLElement).offsetTop - headerHeight;

          window.scrollTo({
            top: targetPosition,
            behavior: "smooth",
          });
        }
      });
    });

    // Destacar enlace activo en scroll
    function highlightActiveSection() {
      const sections = document.querySelectorAll("section[id]");
      const navLinks = document.querySelectorAll('nav a[href^="#"]');
      const headerElement = document.querySelector("header") as HTMLElement;
      const headerHeight = headerElement?.offsetHeight || 80;

      let current = "";
      sections.forEach((section) => {
        const htmlSection = section as HTMLElement;
        const sectionTop = htmlSection.offsetTop - headerHeight - 50;
        const sectionHeight = htmlSection.offsetHeight;

        if (
          window.scrollY >= sectionTop &&
          window.scrollY < sectionTop + sectionHeight
        ) {
          const sectionId = section.getAttribute("id");
          if (sectionId) {
            current = sectionId;
          }
        }
      });

      navLinks.forEach((link) => {
        link.classList.remove("text-[#FAE360]");
        link.classList.add("text-[#bbd4ce]");

        if (link.getAttribute("href") === `#${current}`) {
          link.classList.remove("text-[#bbd4ce]");
          link.classList.add("text-[#FAE360]");
        }
      });
    }

    // Ejecutar al hacer scroll
    window.addEventListener("scroll", highlightActiveSection);
    // Ejecutar al cargar la página
    highlightActiveSection();
  });
</script>

<script>
  // Fallback handler for images using data-fallback to avoid inline onerror attributes
  (function attachImageFallbacks() {
    document.addEventListener("DOMContentLoaded", function () {
      const imgs = document.querySelectorAll("img[data-fallback]");
      imgs.forEach((img) => {
        img.addEventListener("error", function () {
          const el = img as HTMLImageElement;
          const fb = el.getAttribute("data-fallback");
          if (fb && el.src !== fb) {
            el.onerror = null;
            el.src = fb;
          }
        });
      });
    });
  })();
</script>

<style>
  /* Truck enter starting state */
  .truck-enter {
    transform: translateX(-140%) translateY(0) rotate(0deg);
    transition:
      transform 1.8s cubic-bezier(0.2, 0.9, 0.2, 1),
      filter 0.5s ease;
  }

  /* When animation class added, truck drives in and brakes to stop */
  .truck-drive {
    transform: translateX(0) translateY(0) rotate(0deg);
    transition-timing-function: cubic-bezier(
      0.22,
      0.98,
      0.33,
      1
    ); /* fast start, smooth brake */
    transition-duration: 1.6s;
    filter: drop-shadow(0 6px 8px rgba(0, 0, 0, 0.25));
  }

  /* Add a small subtle bounce/brake at the end */
  .truck-drive::after {
    content: "";
    display: block;
    animation: truck-brake 600ms ease-out 1 forwards;
    height: 0;
  }

  @keyframes truck-brake {
    0% {
      transform: translateY(0);
    }
    60% {
      transform: translateY(-3px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
