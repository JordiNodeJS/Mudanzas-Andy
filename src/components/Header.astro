<header class="fixed top-0 w-full bg-[#264e70] text-white z-40 shadow-lg">
  <div class="container mx-auto px-4 py-3">
    <div class="flex flex-wrap items-center justify-between">
      <!-- Logo y nombre -->
      <div class="flex items-center space-x-3">
        <img src="/logo-mudanzas-andy.svg" alt="Mudanzas ANDY Logo" class="w-12 h-8">
        <div>
          <h1 class="text-xl font-bold text-[#FAE360]">Mudanzas ANDY</h1>
          <p class="text-xs text-[#bbd4ce]">Tu mudanza, nuestra prioridad desde 2010</p>
