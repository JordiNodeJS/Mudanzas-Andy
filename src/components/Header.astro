<script>
  // Truck animation: makes the truck drive in from the left on first load
  (function animateTruck() {
    const truckDesktop = document.getElementById(
      "truck-logo"
    ) as HTMLImageElement | null;
    const truckMobile = document.getElementById(
      "truck-logo-mobile"
    ) as HTMLImageElement | null;

    const animateTruckElement = (truck: HTMLImageElement | null) => {
      if (!truck) return;
      // Only trigger once per page load
      try {
        requestAnimationFrame(() => {
          // small delay so the header layout settles
          setTimeout(() => {
            truck.dataset.animated = "true";
            truck.classList.add("truck-drive");
          }, 120);
        });
      } catch (e) {
        // ignore
      }
    };

    // Animate both desktop and mobile truck logos
    animateTruckElement(truckDesktop);
    animateTruckElement(truckMobile);
  })();

  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLinks = document.querySelectorAll(".mobile-menu-link");

    // Toggle del menú móvil
    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");

        // Cambiar icono del botón
        const svg = menuButton.querySelector("svg");
        const currentPath = svg?.querySelector("path");

        if (mobileMenu.classList.contains("hidden")) {
          // Mostrar icono de hamburguesa
          if (currentPath) {
            currentPath.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
          }
        } else {
          // Mostrar icono de X
          if (currentPath) {
            currentPath.setAttribute("d", "M6 18L18 6M6 6l12 12");
          }
        }
      });
    }

    // Cerrar menú al hacer click en un enlace
    menuLinks.forEach((link) => {
      link.addEventListener("click", function () {
        if (mobileMenu) {
          mobileMenu.classList.add("hidden");
          // Restaurar icono de hamburguesa
          const svg = menuButton?.querySelector("svg");
          const currentPath = svg?.querySelector("path");
          if (currentPath) {
            currentPath.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
          }
        }
      });
    });

    // Smooth scroll SOLO para enlaces de secciones internas (mismo dominio)
    const allNavLinks = document.querySelectorAll('a[href^="#"]');
    allNavLinks.forEach((link) => {
      link.addEventListener("click", function (e: Event) {
        const anchor = e.currentTarget as HTMLAnchorElement;
        const href = anchor.getAttribute("href");

        // Solo aplicar smooth scroll a anchors internos (#section)
        if (href && href.startsWith("#")) {
          e.preventDefault();
          const targetElement = document.querySelector(href);

          if (targetElement) {
            const headerElement = document.querySelector(
              "header"
            ) as HTMLElement;
            const headerHeight = headerElement?.offsetHeight || 80;
            const targetPosition =
              (targetElement as HTMLElement).offsetTop - headerHeight;

            window.scrollTo({
              top: targetPosition,
              behavior: "smooth",
            });
          }
        }
        // Los enlaces a otras páginas (/blog-astro) se manejan normalmente
      });
    });

    // Destacar enlace activo en scroll
    function highlightActiveSection() {
      const sections = document.querySelectorAll("section[id]");
      const navLinks = document.querySelectorAll('nav a[href^="#"]');
      const headerElement = document.querySelector("header") as HTMLElement;
      const headerHeight = headerElement?.offsetHeight || 80;

      let current = "";
      sections.forEach((section) => {
        const htmlSection = section as HTMLElement;
        const sectionTop = htmlSection.offsetTop - headerHeight - 50;
        const sectionHeight = htmlSection.offsetHeight;

        if (
          window.scrollY >= sectionTop &&
          window.scrollY < sectionTop + sectionHeight
        ) {
          const sectionId = section.getAttribute("id");
          if (sectionId) {
            current = sectionId;
          }
        }
      });

      navLinks.forEach((link) => {
        link.classList.remove("text-[#FAE360]");
        link.classList.add("text-[#bbd4ce]");

        if (link.getAttribute("href") === `#${current}`) {
          link.classList.remove("text-[#bbd4ce]");
          link.classList.add("text-[#FAE360]");
        }
      });
    }

    // Ejecutar al hacer scroll
    window.addEventListener("scroll", highlightActiveSection);
    // Ejecutar al cargar la página
    highlightActiveSection();
  });
</script>

<script>
  // Fallback handler for images using data-fallback to avoid inline onerror attributes
  (function attachImageFallbacks() {
    document.addEventListener("DOMContentLoaded", function () {
      const imgs = document.querySelectorAll("img[data-fallback]");
      imgs.forEach((img) => {
        img.addEventListener("error", function () {
          const el = img as HTMLImageElement;
          const fb = el.getAttribute("data-fallback");
          if (fb && el.src !== fb) {
            el.onerror = null;
            el.src = fb;
          }
        });
      });
    });
  })();

  // 🎨 Navegación suave mejorada con animaciones
  document.addEventListener("DOMContentLoaded", function () {
    // Función para scroll suave con animación de elementos
    function smoothScrollToSection(target: string) {
      const element = document.querySelector(target);
      if (!element) return;

      // Añadir clase de preparación para animación
      element.classList.add("section-entering");

      // Scroll suave
      element.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });

      // Animación de highlight de la sección
      setTimeout(() => {
        element.classList.add("section-highlight");
        setTimeout(() => {
          element.classList.remove("section-entering", "section-highlight");
        }, 800);
      }, 500);
    }

    // Interceptar clicks en enlaces de navegación interna
    const navLinks = document.querySelectorAll('a[href^="/#"]');
    navLinks.forEach((link) => {
      link.addEventListener("click", function (e: Event) {
        e.preventDefault();

        const targetElement = e.currentTarget as HTMLAnchorElement;
        const href = targetElement.getAttribute("href");
        if (!href) return;

        const targetId = href.replace("/#", "#");

        // Efecto visual en el enlace clickeado
        targetElement.style.transform = "scale(0.95)";
        targetElement.style.transition = "transform 0.1s ease";

        setTimeout(() => {
          targetElement.style.transform = "scale(1)";
          smoothScrollToSection(targetId);
        }, 100);

        // Cerrar menú móvil si está abierto
        const mobileMenu = document.getElementById("mobile-menu");
        const menuToggle = document.getElementById("mobile-menu-toggle");
        if (mobileMenu && mobileMenu.classList.contains("block")) {
          mobileMenu.classList.add("hidden");
          mobileMenu.classList.remove("block");
          if (menuToggle) {
            menuToggle.textContent = "☰";
            menuToggle.setAttribute("aria-expanded", "false");
          }
        }
      });
    });

    // Destacar enlace activo según scroll position
    function updateActiveNavLink() {
      const sections = document.querySelectorAll("section[id]");
      const navLinks = document.querySelectorAll('a[href^="/#"]');

      let current = "";
      sections.forEach((section) => {
        const htmlSection = section as HTMLElement;
        const sectionTop = htmlSection.offsetTop - 100;
        if (window.scrollY >= sectionTop) {
          const id = section.getAttribute("id");
          if (id) current = id;
        }
      });

      navLinks.forEach((link) => {
        link.classList.remove("active-nav-link");
        if (link.getAttribute("href") === `/#${current}`) {
          link.classList.add("active-nav-link");
        }
      });
    }

    // Throttled scroll listener
    let ticking = false;
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateActiveNavLink();
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener("scroll", onScroll);
    updateActiveNavLink(); // Initial call
  });
</script>

<style>
  /* Truck enter starting state */
  .truck-enter {
    transform: translateX(-140%) translateY(0) rotate(0deg);
    transition:
      transform 1.8s cubic-bezier(0.2, 0.9, 0.2, 1),
      filter 0.5s ease;
  }

  /* When animation class added, truck drives in and brakes to stop */
  .truck-drive {
    transform: translateX(0) translateY(0) rotate(0deg);
    transition-timing-function: cubic-bezier(
      0.22,
      0.98,
      0.33,
      1
    ); /* fast start, smooth brake */
    transition-duration: 1.6s;
    filter: drop-shadow(0 6px 8px rgba(0, 0, 0, 0.25));
  }

  /* Add a small subtle bounce/brake at the end */
  .truck-drive::after {
    content: "";
    display: block;
    animation: truck-brake 600ms ease-out 1 forwards;
    height: 0;
  }

  @keyframes truck-brake {
    0% {
      transform: translateY(0);
    }
    60% {
      transform: translateY(-3px);
    }
    100% {
      transform: translateY(0);
    }
  }

  /* 🎨 Estilos para navegación mejorada */
  .active-nav-link {
    color: rgb(var(--color-highlight)) !important;
    font-weight: 600;
    position: relative;
  }

  .active-nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: rgb(var(--color-highlight));
    border-radius: 1px;
    animation: underline-expand 0.3s ease-out;
  }

  @keyframes underline-expand {
    from {
      width: 0;
      left: 50%;
      right: 50%;
    }
    to {
      width: 100%;
      left: 0;
      right: 0;
    }
  }

  /* Animaciones para secciones */
  :global(.section-entering) {
    position: relative;
    overflow: hidden;
  }

  :global(.section-entering::before) {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(var(--color-highlight), 0.1),
      transparent
    );
    animation: section-shimmer 0.8s ease-out;
    pointer-events: none;
    z-index: 1;
  }

  :global(.section-highlight) {
    animation: section-glow 0.8s ease-out;
  }

  @keyframes section-shimmer {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  @keyframes section-glow {
    0% {
      box-shadow: 0 0 0 rgba(var(--color-primary), 0);
    }
    50% {
      box-shadow: 0 0 20px rgba(var(--color-primary), 0.2);
    }
    100% {
      box-shadow: 0 0 0 rgba(var(--color-primary), 0);
    }
  }

  /* Mejoras hover para enlaces de navegación */
  nav a {
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  nav a:hover {
    transform: translateY(-1px);
  }

  nav a::before {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  nav a:hover::before {
    width: 100%;
  }
</style>
