---
interface Props {
  icon: string;
  title: string;
  description: string;
  features: string[];
  gradient: string;
}

const { icon, title, description, features, gradient } = Astro.props as Props;
---

<div class={`${gradient} card card-compact card-bordered`}>
  <div class="text-3xl lg:text-4xl mb-3 lg:mb-4">{icon}</div>
  <h3 class="text-lg lg:text-xl font-bold text-[#264e70] mb-2 lg:mb-3">
    {title}
  </h3>
  <p class="text-[#679186] mb-3 lg:mb-4 text-sm lg:text-base">
    {description}
  </p>
  <div class="text-xs lg:text-sm text-[#264e70] font-semibold">
    <ul class="space-y-1">
      {
        features.map((feature) => (
          <li class="flex items-center gap-2">
            <span class="text-green-600">âœ“</span>
            <span class="break-words hyphens-auto">{feature}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
