---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.astro";
import SmartPopup from "../components/SmartPopup.astro";

// Section components
import HeroSection from "../components/sections/HeroSection.astro";
import ServicesSection from "../components/sections/ServicesSection.astro";
import TeamSection from "../components/sections/TeamSection.astro";
import PricingSection from "../components/sections/PricingSection.astro";
import TestimonialsSection from "../components/sections/TestimonialsSection.astro";
---

<Layout>
  <!-- Header fijo -->
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <HeroSection />

    <!-- Sección de Servicios -->
    <ServicesSection />

    <!-- Sección de Galería de Nuestro Equipo -->
    <TeamSection />

    <!-- Sección de Precios -->
    <PricingSection />

    <!-- Sección de Testimonios -->
    <TestimonialsSection />
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Formulario de contacto sticky -->
  <ContactForm />

  <!-- Pop-up inteligente -->
  <SmartPopup />
</Layout>
